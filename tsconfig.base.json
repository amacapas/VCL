{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@vlab/ui": [
                "packages/ui/src/index"
            ],
            "@vlab/types": [
                "packages/types/src/index"
            ],
            "@vlab/utils": [
                "packages/utils/src/index"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}